---
//TextService.astro
import '../styles/global.css';

const { serviceNumber, titleService, detailImpression, idealsActivities, detailService } = Astro.props;
const detailServiceArray = Array.isArray(detailService) ? detailService : [detailService];
const titleArray = Array.isArray(titleService) ? titleService : [titleService];
---

<section>
    <div class="detailed-info">
        {titleArray.map((titleService) => (
        <h4>{titleService}</h4>
        ))}
        {detailServiceArray.map((detail) => (
            <p>{detail}</p>
        ))}
    </div>
    <div class="block-1">
        <div class="number-service">
            <h2>{serviceNumber}</h2>
        </div>
        <div class="text">
            <h1>{titleService}</h1>
            <div class="first-impression">
                <p>{detailImpression}</p>
            </div>
            <div class="ideal">
                <div>
                    <span class="material-symbols-outlined">lightbulb_2</span>
                    <h3>Ideal para</h3>
                </div>
                <p>{idealsActivities}</p>
            </div>
        </div>
    </div>
</section>

<style>
    h1, h2, h3, h4, h5, h6, p, a, div {
        font-family: 'Rubik', sans-serif;
        color: var(--color-gris);
    }
    
    section {
        width: 500px;
        min-height: auto;
        position: relative;
        display: flex;
        align-items: flex-start;
        margin: 0 auto;
        padding: 1.5rem;
        border-radius: 10px;
        border: 3px solid transparent;
        background: 
            linear-gradient(var(--color-blanco-gris), var(--color-blanco-gris)) padding-box,
            linear-gradient(to right, var(--color-violeta), var(--color-azul-oscuro)) border-box;
        transition: all 0.2s ease-in-out;
        overflow: hidden;
    }
    
    .block-1 {
        width: 100%;
        display: flex;
        align-items: start;
        flex-direction: column;
        gap: 1rem;
    }

    .first-impression {
        border-radius: 5px;
        padding: 1rem 1.5rem;
        background-color: rgba(17, 115, 168, 0.1);
    }

    .first-impression p {
        font-weight: 100;
        font-size: 1.15rem;
        color: var(--color-azul-oscuro);
        margin: 0;
    }

    .number-service h2 {
        font-weight: 100;
        font-size: 2.5rem;
        margin: 0;
        color: rgba(17, 115, 168, 0.4);
    }
    
    .text {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    
    .text h1 {
        font-weight: 500;
        font-size: 3rem;
        line-height: 2.5rem;
        letter-spacing: -2px;
        text-transform: uppercase;
        margin: 0;
    }
    
    .ideal {
        display: flex;
        flex-direction: column;
        gap: .25rem;
    }

    .ideal h3 {
        margin: 0;
        font-size: 1rem;
        font-weight: 400;
        text-transform: uppercase;
    }
    
    .ideal p,
    .ideal span {
        margin: 0;
        font-weight: 400;
    }
    
    .ideal div {
        display: flex;
        justify-content: start;
        align-items: center;
        gap: .25rem;
        padding: .5rem 0rem;
    }

    .detailed-info {
        display: none;
        width: 100%;
        height: 100%;
        flex-direction: column;
        justify-content: flex-start;
        gap: 1.5rem;
        pointer-events: none;
        box-sizing: border-box;

        transition: all .8s ease;
        translate: 0px 0px;
        @starting-style {
            translate: 0px 20px;
        }
    }

    .detailed-info p {
        width: 100%;
        margin: 0;
        font-weight: 300;
        font-size: 1rem;
        line-height: 1.6;
        color: var(--color-blanco-gris);
        opacity: 0;
        transition: all .3s;
    }

    .detailed-info h4 {
        color: var(--color-blanco-gris);
        margin: 0;
    }

    @media (hover: hover) {
        section:hover {
            background: 
                linear-gradient(var(--color-gris), var(--color-negro)) padding-box,
                linear-gradient(to right, var(--color-violeta), var(--color-azul-oscuro)) border-box;
        }
        
        section:hover .block-1 {
            display: none;
            pointer-events: none;
        }
        
        section:hover .detailed-info {
            display: flex;
            pointer-events: auto;
        }
        section:hover .detailed-info p {
            opacity: 1;
        }
    }
</style>